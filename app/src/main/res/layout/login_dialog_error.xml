<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_dialog_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/login_dialog_animation"
        android:layout_width="310dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="51dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/login_dialog_boxmsg"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_dialog_animation"
        android:layout_alignParentStart="true"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="47dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="TextView" />

    <Button
        android:id="@+id/login_dialog_button_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_dialog_boxmsg"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginTop="63dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="32dp"
        android:text="@string/buttonAccept" />
</RelativeLayout>